{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["airbnb-base", "plugin:node/recommended", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "warn",
		"no-unused-vars": "error",
		"no-underscore-dangle": "off",
		"no-shadow": "off",
		"no-param-reassign": "warn"
	}
}
